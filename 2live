#!/bin/bash
# convert spun to spun-live
/bin/cp spun spun-live
ed spun-live << EOF
/Updates/c
    \"$"Run 'sudo pacman -Syu' to update.\n \\
<a href=http://www.chakra-linux.org/wiki/index.php/Pacman>Visit the Chakra wiki</a> to learn more about Pacman. \n\\
Updates are available for the following package(s): \n" "\${npkgz[*]}"\"
.
wq
EOF
